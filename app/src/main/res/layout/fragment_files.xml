<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kasper.android.file_explorer.fragments.FilesFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_files_photos_card_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="288 فایل"
                        android:drawableRight="@drawable/ic_picture"
                        android:drawablePadding="12dp"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="2.5 GB"
                        android:drawableRight="@drawable/ic_storage"
                        android:drawablePadding="12dp"
                        android:gravity="right"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_picture"
                    android:tint="#000"
                    android:scaleType="fitXY"
                    android:padding="24dp"
                    android:background="#3000"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_files_musics_card_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/red"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="288 فایل"
                        android:drawableRight="@drawable/ic_music"
                        android:drawablePadding="12dp"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="2.5 GB"
                        android:drawableRight="@drawable/ic_storage"
                        android:drawablePadding="12dp"
                        android:gravity="right"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_music"
                    android:tint="#000"
                    android:scaleType="fitXY"
                    android:padding="24dp"
                    android:background="#3000"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_files_videos_card_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/green"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="288 فایل"
                        android:drawableRight="@drawable/ic_video"
                        android:drawablePadding="12dp"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="2.5 GB"
                        android:drawableRight="@drawable/ic_storage"
                        android:drawablePadding="12dp"
                        android:gravity="right"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_video"
                    android:padding="24dp"
                    android:background="#3000"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_files_downloads_card_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/purple"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="288 فایل"
                        android:drawableRight="@drawable/ic_download"
                        android:drawablePadding="12dp"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="2.5 GB"
                        android:drawableRight="@drawable/ic_storage"
                        android:drawablePadding="12dp"
                        android:gravity="right"
                        android:textSize="17.5sp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_download"
                    android:padding="24dp"
                    android:background="#3000"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
