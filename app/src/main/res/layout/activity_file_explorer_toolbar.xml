<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_main_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/WhiteSmoke"
        android:elevation="6dp">

        <kasper.android.file_explorer.components.AddressView
            android:id="@+id/activity_main_path_address_view"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/white_rect"
            android:paddingStart="16dp"
            android:paddingEnd="45dp"
            android:gravity="start|center_vertical"
            android:elevation="6dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:scrollbars="none"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_main_back_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/back"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/activity_main_context_menu_image_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/more"
            android:elevation="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

</RelativeLayout>